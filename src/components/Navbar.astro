---
import { Image } from "astro:assets";
import Logo from "../images/favicon.png";
import MenuModal from "./MenuModal.astro";
---

<nav class="border-b sticky top-0 bg-white bg-opacity-70">
  <div class="p-2 m-auto container flex justify-between">
    <a href="/">
      <Image
        src={Logo}
        alt="My Logo"
        width="50"
        height="50"
        loading="eager"
      /></a
    >
    <MenuModal />
  </div>
</nav>
