---
const props = Astro.props;
---

<div class="border-b py-2 text-ellipsis">
  <a href={props.link} class="text-xl text-blue-400 hover:text-blue-500"
    >{props.title}</a
  >
  <small class="line-clamp-2">
    {props.description}
  </small>
  <div class="flex justify-between mt-3">
    <div class="flex gap-1">
      {
        props.tags.map((tag: string) => {
          return (
            <a href={`/tags/${tag}`}>
              <button class="rounded-xl bg-gray-200 px-2 flex justify-center items-center">
                <small>{tag}</small>
              </button>
            </a>
          );
        })
      }
    </div>
    <small>{props.date}</small>
  </div>
</div>
