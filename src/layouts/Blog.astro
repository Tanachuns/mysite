---
import Layout from "../layouts/Layout.astro";
import type { MarkdownLayoutProps } from "astro";

type Props = MarkdownLayoutProps<{
  // Define frontmatter props here
  title: string;
  date: string;
  tags: string[];
  isDraft: boolean;
}>;

export type Outline = {
  name: string;
  class: string;
};

const { frontmatter, url, headings } = Astro.props;
const heads:Outline[] = headings.map((item) => {
  return {
    name:item.text,
    class:item.slug
  }
});
---

<Layout title={frontmatter.title} outline={heads}>
  <p class="text-3xl mb-1">{frontmatter.title}</p>
  <small>{frontmatter.date}</small>
  <hr class="my-5" />
  <div class="prose text-pretty max-w-full">
    <slot />
  </div>
</Layout>
