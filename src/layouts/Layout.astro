---
import Footer from "../components/Footer.astro";
import Navbar from "../components/Navbar.astro";
import Outlines from "../components/Outlines.astro";
import Sidebar from "../components/Sidebar.astro";
import Logo from "../images/favicon.png";
import type { Outline } from "./Blog.astro";

interface Props {
  title: string;
  outline?: Outline[];
  url?: string;
  imgPath?: string;
  desc?: string;
}

const { title, outline, url, imgPath, desc } = Astro.props;
---

<!doctype html>
<html lang="th" class="scroll-smooth scroll-p-20">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" />
    <meta name="viewport" content="width=device-width" />

    <!-- SEO -->
    <link rel="sitemap" href="/sitemap-index.xml" />

    <!--  -->
    <link rel="icon" type="image/svg+xml" href={Logo.src} />
    <meta name="generator" content={Astro.generator} />

    <!-- Primary Meta Tags -->

    <meta name="title" content={title + " | MintCho.cc "} />
    <meta name="description" content={desc} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={url} />
    <meta property="og:title" content={title + " | MintCho.cc "} />
    <meta property="og:description" content={desc} />
    <meta property="og:image" content={imgPath} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={url} />
    <meta
      property="twitter:title"
      content={title + " | MintCho.cc "}
    />
    <meta property="twitter:description" content={desc} />
    <meta property="twitter:image" content={imgPath} />
    <link
      href="https://fonts.googleapis.com/css2?family=Kanit:wght@300;400;500;600;700&family=Noto+Sans+Thai:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />

    <!-- Meta Tags Generated with https://metatags.io -->
  </head>
  <body class="overflow-x-hidden bg-zinc-800 text-white">
    <Navbar />
    <main
      class="container flex justify-center items-center m-auto min-h-[100vh]"
    >
      <div class="flex flex-col md:flex-row gap-4 items-center">
        {outline &&      <div class="w-[200px]"></div>}
        <div class="max-w-[480px] p-2 md:pt-5"><slot /></div>
        {outline && <Outlines outlines={outline} />}
      </div>
    </main>

    <Footer />
  </body>
</html>
